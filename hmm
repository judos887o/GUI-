    UICorner.CornerRadius = UDim.new(0, 10 * SCALE)
    UICorner.Parent = BottomBar

    local UIStroke = Instance.new("UIStroke")
    UIStroke.Color = Theme.Stroke
    UIStroke.Thickness = 1 * SCALE
